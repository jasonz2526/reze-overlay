{
    "manifest_version": 3,
    "name": "Manga Overlay Translator",
    "version": "0.1.0",
    "description": "Drag-to-crop and overlay translations on manga pages.",
    "permissions": [],
    "host_permissions": [
      "https://*/*",
      "http://*/*"
    ],
    "content_scripts": [
      {
        "matches": ["https://*/*", "http://*/*"],
        "js": ["contentScript.js"],
        "css": ["overlay.css"],
        "run_at": "document_idle"
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["overlay.js", "overlay.css"],
        "matches": ["https://*/*", "http://*/*"]
      }
    ]
  }
  